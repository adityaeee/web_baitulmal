<div class="container mt-3">
	<div class="row">
		<div class="col-md-3">
			<a href="#" onclick="goBack()" class="btn btn-success badge">&laquo; Kembali</a>
		</div>
		<div class="col-md-6">
			<h2 class="fw-bold">UPDATE DATA BANTUAN SERTIFIKASI HARTA WAQAF</h2>
		</div>
	</div>
	<% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
	<div class="alert alert-danger" role="alert">
		<ul>
			<li><%= error%></li>
			<% }) %>
		</ul>
		<% } %>
	</div>
	<div class="row mt-3 justify-content-center">
		<div class="col-md-6">
			<form
				method="post"
				id="formUbah"
				action="/waqaf/<%= waqaf.id_waqaf %>?_method=PUT"
				enctype="multipart/form-data"
			>
				<input type="hidden" name="NIK" value="<%= waqaf.NIK %>" />
				<div class="mb-3">
					<label for="NIK" class="form-label">NIK</label>
					<input
						type="text"
						class="form-control"
						id="NIK"
						name="NIK"
						value="<%= waqaf.NIK %>"
						disabled
					/>
				</div>

				<label for="proposal" class="form-label mb-2"
					>Dokumen Hasil Pengukuran & Sketsa Pengukuran</label
				>
				<div class="card mb-3">
					<div class="card-body">
						<div class="mb-1">
							<input type="file" class="form-control-file" id="proposal" name="proposal" />
						</div>
					</div>
				</div>

				<label for="AIW" class="form-label mb-2">Fotokopi Akta Ikrar Waqaf</label>
				<div class="card mb-3">
					<div class="card-body">
						<div class="mb-1">
							<input type="file" class="form-control-file" id="AIW" name="AIW" />
						</div>
					</div>
				</div>

				<input type="hidden" name="bobot_proposal" value="<%= waqaf.bobot_proposal %>" />
				<input type="hidden" name="bobot_AIW" value="<%= waqaf.bobot_AIW %>" />

				<button type="submit" class="btn btn-success mb-5">Simpan</button>
			</form>
		</div>
	</div>
</div>

<script>
	function goBack() {
		window.history.back();
	}
</script>
