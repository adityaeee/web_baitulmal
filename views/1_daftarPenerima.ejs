<div class="container mt-3">
	<div class="row">
		<div class="col-md-3"></div>
		<div class="col-md-6">
			<h2 class="fw-bold">DAFTAR PENERIMA ZAKAT MAL</h2>
		</div>
		<div class="col-md-2">
			<% if (session?.user?.role=="gampong") { %>
			<a href="/masyarakat/tambah" class="btn btn-success">Tambah Penerima</a>
			<% } %>
		</div>
	</div>
	<div class="row mt-4">
		<div class="col-md">
			<% if (msg.length !== 0) { %>
			<script>
				Swal.fire({
					icon: "success",
					title: "<%= msg %>",
					showConfirmButton: false,
					timer: 2000,
				});
			</script>
			<% } %>
			<table class="table table-striped text-center mb-5">
				<thead>
					<tr>
						<th scope="col">No</th>
						<th scope="col">NAMA</th>
						<th scope="col">GOLONGAN</th>
						<th scope="col">PERIODE</th>
						<th scope="col">STATUS</th>
						<th scope="col">KET</th>
					</tr>
				</thead>
				<tbody>
					<% masyarakat.forEach((orang,i) => { %>
					<tr>
						<th scope="row"><%= i+1 %></th>
						<td><%= orang.nama %></td>
						<td><%= orang.golongan %></td>
						<td><%= orang.periode %></td>
						<td><%= orang.status %></td>
						<td>
							<% let endpoint = orang.golongan.replace(/\s/g, "-")%>
							<a href="/<%= endpoint %>/<%= orang.NIK %>" class="btn btn-success badge">Detail</a>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>
