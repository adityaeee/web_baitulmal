<div class="container mt-3">
  <div class="row center">
    <div class="col-md-3">
      <a href="/masyarakat/<%= guruDayah.NIK %>" class="btn btn-success badge"
        >&laquo; Kembali</a
      >
    </div>
    <div class="col-md-6">
      <h2 class="fw-bold">UPDATE DATA PENERIMA ZAQAT GURU DAYAH</h2>
    </div>
  </div>
  <% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
  <div class="alert alert-danger" role="alert">
    <ul>
      <li><%= error%></li>
      <% }) %>
    </ul>
    <% } %>
  </div>
  <div class="row mt-3">
    <div class="col-md-6">
      <form
        method="post"
        id="formUbah"
        action="/guruDayah/<%= guruDayah.id_guru_dayah %>?_method=PUT"
        enctype="multipart/form-data"
      >

        <input type="hidden" name="NIK" value="<%= guruDayah.NIK %> /">
        
        <div class="mb-3">
          <label for="NIK" class="form-label">NIK</label>
          <input
            type="text"
            class="form-control"
            id="NIK"
            name="NIK"
            value="<%= guruDayah.NIK %>"
            disabled
          />
        </div>

        <div class="mb-3">
          <label for="pendapatan" class="form-label">Pendapatan perBulan</label>
          <select
            name="pendapatan"
            class="form-select"
            aria-label="Default select example"
          >
            <option selected>Pilih Pendapatan</option>
            <option value="1">Tidak Ada</option>
            <option value="2">< Rp200.000</option>
            <option value="3">Rp200.000 - Rp500.000</option>
            <option value="4">Rp501.000 - Rp800.000</option>
            <option value="5">Rp801.000 - Rp1.000.000</option>
            <option value="6">Rp1.001.000 - Rp1.500.000</option>
            <option value="7">Rp1.501.000 - Rp2.000.000</option>
            <option value="8">>2.000.000</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="aset" class="form-label">Kepemilikan Harta (Aset)</label>
          <select
            name="aset"
            class="form-select"
            aria-label="Default select example"
          >
            <option selected>Pilih Aset</option>
            <option value="1">Tidak Ada</option>
            <option value="2">Emas</option>
            <option value="3">Tanah Produktif</option>
            <option value="4">Rumah/Toko Sewa</option>
            <option value="5">Emas + Tanah Produktif</option>
            <option value="6">Emas + Rumah/Toko Sewa</option>
            <option value="7">Tanah Produktif + Rumah/Toko Sewa</option>
            <option value="8">Semua Ada</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="beban_tanggungan" class="form-label"
            >Beban Tanggungan</label
          >
          <select
            name="beban_tanggungan"
            class="form-select"
            aria-label="Default select example"
          >
            <option selected>Pilih Beban Tanggungan</option>
            <option value="1">Disabilitas dan Janda</option>
            <option value="2">Disabilitas</option>
            <option value="2">Janda</option>
            <option value="3">Tidak ada</option>
          </select>
        </div>

        <div class="mb-3">
          <label for="norekening" class="form-label">Nomor Rekening</label>
          <input
            type="text"
            class="form-control"
            id="norekening"
            name="norekening"
            value="<%= guruDayah.norekening %>"
          />
        </div>

        <label for="surat_domisili" class="form-label mb-2"
          >KTP / Surat Domisili</label
        >
        <div class="card mb-3">
          <div class="card-body">
            <div class="mb-1">
              <input
                type="file"
                class="form-control-file"
                id="surat_domisili"
                name="surat_domisili"
              />
            </div>
          </div>
        </div>

        <label for="surat_golongan" class="form-label mb-2"
          >Surat Keterangan Miskin (Meunyoe na)</label
        >
        <div class="card mb-3">
          <div class="card-body">
            <div class="mb-1">
              <input
                type="file"
                class="form-control-file"
                id="surat_golongan"
                name="surat_golongan"
              />
            </div>
          </div>
        </div>

        <label for="surat_keterangan" class="form-label mb-2"
          >Surat Aktif Mengajar (Meunyoe na)</label
        >
        <div class="card mb-3">
          <div class="card-body">
            <div class="mb-1">
              <input
                type="file"
                class="form-control-file"
                id="surat_keterangan"
                name="surat_keterangan"
              />
            </div>
          </div>
        </div>

        <label for="jadwal_mengajar" class="form-label mb-2"
          >Fotokopi Jadwal Mengajar (Meunyoe na)</label
        >
        <div class="card mb-3">
          <div class="card-body">
            <div class="mb-1">
              <input
                type="file"
                class="form-control-file"
                id="jadwal_mengajar"
                name="jadwal_mengajar"
              />
            </div>
          </div>
        </div>

        <label for="rekening" class="form-label mb-2"
          >Fotokopi Rekening Bank Aceh</label
        >
        <div class="card mb-4">
          <div class="card-body">
            <div class="mb-1">
              <input
                type="file"
                class="form-control-file"
                id="rekening"
                name="rekening"
              />
            </div>
          </div>
        </div>

        <input
          type="hidden"
          name="bobot_domisili"
          value="<%= guruDayah.bobot_domisili %>"
        />
        <input
          type="hidden"
          name="bobot_golongan"
          value="<%= guruDayah.bobot_golongan %>"
        />
        <input
          type="hidden"
          name="bobot_keterangan"
          value="<%= guruDayah.bobot_keterangan %>"
        />
        <input
          type="hidden"
          name="bobot_jadwal"
          value="<%= guruDayah.bobot_jadwal %>"
        />
        <input
          type="hidden"
          name="bobot_rekening"
          value="<%= guruDayah.bobot_rekening %>"
        />

        <button type="submit" class="btn btn-success mb-5">Simpan</button>
      </form>
    </div>
  </div>
</div>
