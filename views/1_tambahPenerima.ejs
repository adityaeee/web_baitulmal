<div class="container mt-3">
	<div class="row center">
		<div class="col-md-3">
			<a href="/masyarakat" class="btn btn-success badge">&laquo; Kembali</a>
		</div>
		<div class="col-md-6">
			<h2 class="fw-bold">TAMBAH DATA PENERIMA ZAKAT MAL</h2>
		</div>
	</div>
	<div class="d-flex justify-content-center">
		<% if (typeof errors != 'undefined') { %> <% errors.forEach(error => { %>
		<div class="alert alert-danger d-flex align-items-center py-2" role="alert">
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				fill="currentColor"
				class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2"
				viewBox="0 0 16 16"
				role="img"
				aria-label="Warning:"
			>
				<path
					d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"
				/>
			</svg>
			<div><%= error %></div>
		</div>
		<% }) %> <% } %>
	</div>
	<div class="row justify-content-center">
		<div class="col-md-6">
			<form method="post" action="/masyarakat">
				<div class="mb-3">
					<label for="no_KK" class="form-label">Nomor Kartu Keluarga</label>
					<input
						type="text"
						class="form-control"
						id="no_KK"
						name="no_KK"
						value="<%=data?.no_KK%>"
						required
					/>
				</div>
				<div class="mb-3">
					<label for="NIK" class="form-label">Nomor KTP</label>
					<input
						type="text"
						class="form-control"
						id="NIK"
						name="NIK"
						value="<%=data?.NIK%>"
						required
					/>
				</div>
				<div class="mb-3">
					<label for="nama" class="form-label">Nama Lengkap</label>
					<input
						type="text"
						class="form-control"
						id="nama"
						name="nama"
						value="<%=data?.nama%>"
						required
					/>
				</div>
				<div class="mb-3">
					<label for="tempat_lahir" class="form-label">Tempat Lahir</label>
					<input
						type="text"
						class="form-control"
						id="tempat_lahir"
						name="tempat_lahir"
						value="<%=data?.tempat_lahir%>"
						required
					/>
				</div>
				<div class="mb-3">
					<label for="tanggal_lahir" class="form-label">Tanggal Lahir</label>
					<input
						type="date"
						class="form-control"
						id="tanggal_lahir"
						name="tanggal_lahir"
						value="<%=data?.tanggal_lahir%>"
						required
					/>
				</div>
				<div class="mb-3">
					<label for="dusun" class="form-label">Dusun</label>
					<input
						type="text"
						class="form-control"
						id="dusun"
						name="dusun"
						value="<%=data?.dusun%>"
						required
					/>
				</div>
				<label for="golongan" class="form-label">Pilih Golongan</label>
				<select name="golongan" class="form-select mb-3" aria-label="Default select example">
					<option selected>Jenis Bantuan</option>
					<option value="fakir">Fakir</option>
					<option value="miskin">Miskin</option>
					<option value="miskin insidentil">Miskin Insidentil</option>
					<option value="guru dayah">Insentif Guru Dayah</option>
					<option value="santri dayah">Santunan Santri Dayah</option>
					<option value="santri dayah luar">Santunan Santri Dayah di Luar Aceh Besar</option>
					<option value="anak yatim">Santunan Anak Yatim</option>
					<option value="disabilitas">Bantuan Disabilitas</option>
					<option value="muallaf">Santunan Muallaf</option>
					<option value="pelajar miskin">Bantuan Pendidikan Siswa Miskin</option>
					<option value="santri muallaf">Santunan Santri Muallaf</option>
					<option value="gharimin">Bantuan Pelunasan Hutang (Gharimin)</option>
					<option value="santri berprestasi">Beasiswa Santri Berprestasi</option>
					<option value="madrasah">Bantuan Oprasional TPA/Balai Pengajian</option>
					<option value="waqaf">Bantuan Sertifikasi Harta Waqaf</option>
					<option value="pelajar rantau">Bantuan Pendidikan Pelajar di Luar Negeri</option>
					<option value="ibnu sabil">Ibnu Sabil</option>
				</select>
				<input type="hidden" name="status" value="Menunggu" />
				<input type="hidden" name="periode" value="0" />
				<input type="hidden" name="waktu_proses" value="-" />
				<button type="submit" class="btn btn-success mb-5">Konfirmasi</button>
			</form>
		</div>
	</div>
</div>
